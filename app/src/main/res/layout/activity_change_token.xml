<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
   >

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="272dp"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_close"
            android:layout_gravity="right|top"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/bt_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HelpToken更换"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:textSize="25sp"/>
    <EditText
        android:id="@+id/token_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新HelpToken"/>

        <EditText
            android:id="@+id/token_confirm_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请确认HelpToken"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:background="@drawable/btn_code_gen_style"/>

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/bt_cancel"
            android:layout_marginLeft="25dp"
            android:text="提交"
            android:background="@drawable/btn_code_gen_style"/>

    </LinearLayout>
   </LinearLayout>
</LinearLayout>