<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    tools:context="com.kybss.ulocked.ui.activity.GeneralCodeActivity">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="352dp"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_close"
            android:layout_gravity="right|top"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/bt_close"/>
    <ImageView
        android:id="@+id/img_qcode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_general_code"
        android:scaleType="fitCenter"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <com.kybss.ulocked.widget.CountDownTimerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新生成"
            android:id="@+id/bt_gen_qcode"
            android:background="@drawable/btn_code_gen_style"
            />

        <Button
            android:id="@+id/bt_submit_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_toEndOf="@+id/bt_gen_qcode"
            android:layout_marginLeft="25dp"
            android:text="提交"
            android:background="@drawable/btn_code_gen_style"/>


    </LinearLayout>
   </LinearLayout>
</LinearLayout>