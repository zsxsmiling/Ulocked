<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray_bg">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical"
            android:id="@+id/manager_item"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_manager_meeting_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/door_number"
                    android:textSize="18sp"
                    android:textColor="#5b5d5c"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_manager_door_state"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:text="状态"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="6dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_manager_meeting_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meeting_topic"
                android:textColor="#5b5d5c"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">


                <ImageView
                    android:id="@+id/item_manager_username_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_me_selected" />



                <TextView
                    android:id="@+id/item_manager_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="5dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/apply_user"
                    android:textColor="#5b5d5c"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_toEndOf="@id/item_manager_username_icon"
                    />


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>